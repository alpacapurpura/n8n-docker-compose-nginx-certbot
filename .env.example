# Configuraci贸n de PostgreSQL
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=n8n

# Configuraci贸n de n8n
N8N_ENCRYPTION_KEY=your_long_secure_encryption_key_here
N8N_USER_MANAGEMENT_JWT_SECRET=your_long_secure_jwt_secret_here

# Configuraci贸n de dominio y SSL
VIRTUAL_HOST=your-domain.example.com
N8N_HOST=https://your-domain.example.com
WEBHOOK_URL=https://your-domain.example.com/
CERTBOT_EMAIL=your-email@example.com

# Configuraci贸n del contenedor
TZ=UTC

# Variables para logging avanzado
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=file
N8N_LOG_FILE_LOCATION=/home/node/.n8n/logs/n8n.log
N8N_LOG_FILE_MAX_SIZE=10485760
N8N_LOG_FILE_MAX_FILES=10

# Variables adicionales para n8n
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false
N8N_TEMPLATES_ENABLED=true
N8N_EXECUTIONS_PROCESS=main
N8N_PERFORMANCE_INMEMORYDB_TTL=60000
N8N_HIRING_BANNER_ENABLED=false 